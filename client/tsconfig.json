{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build/dist",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./src",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "importHelpers": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "configFile": "tslint.json"
      }
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "scripts"
  ],
  "types": [
    "typePatches"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}